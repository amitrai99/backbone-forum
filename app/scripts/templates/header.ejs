<!-- header needs to support both signed in and signed out state -->
<header class="app-header">
  <h1>Backbone forum</h1>
    <!-- user is logged in -->
  <% if( data && data.name ) { %>
    <nav id="app-header-nav" class="navbar navbar-default">
      <div class="container">
        <ul class="nav navbar-nav">
          <li>
            <a href="/questions">Questions</a>
          </li>
          <li>
            <a href="/new-question">New Question</a>
          </li>
        </ul>
        <p class="navbar-text pull-right">
          Signed in as <span class="name" data-profileid=""><strong><%= data.name %></strong></span> | <a href="/logout">Logout</a>&nbsp;&nbsp;
        </p>
      </div>
    </nav>
  <% } else { %>
    <nav id="app-header-nav" class="navbar navbar-default">
      <div class="container">
        <ul class="nav navbar-nav">
          <li>
            <a href="/login">Welcome!</a>
          </li>
        </ul>
      </div>
    </nav>
  <% } %>
</header>
