<div class="row">
  <div class="col-sm-12">
    <p class="pull-right">
      <a class="btn btn-default" href="#questions">See all questions</a>
    </p>
  </div>
  <div class="col-sm-12">
    <hr/>
    <section class="question-form">
      <h1>Ask a question</h1>
      <div class="alert alert-success hide">
        <strong>Success!</strong> message posted
      </div>
      <div class="alert alert-warning hide">
        <strong>Warning!</strong> message posting failed.
      </div>
      <form class="form-horizontal" action="#" id="new-ques-form">
        <fieldset class="question-fs">
          <legend class="sr-only">Ask a question</legend>
          <div class="form-group">
            <div class="col-sm-12">
              <textarea class="form-control question-ta" id="question-ta" placeholder="Question" rows="5"></textarea>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-9 col-sm-3">
              <div class="pull-right">
                <span class="char-count" title="characters">0</span>&nbsp;
                <button type="submit" class="btn btn-primary btn-newqs">Post</button>
              </div>
            </div>
          </div>
        </fieldset>
      </form>
    </section>
  </div>
</div>
